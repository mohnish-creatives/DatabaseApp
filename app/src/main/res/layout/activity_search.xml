<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.ur6467.databaseapp.SearchActivity">

    <TextView
        android:id="@+id/txtSearchLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="37dp"
        android:layout_marginTop="40dp"
        android:text="Search record"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/txtNameSearch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/txtSearchLabel"
        android:layout_below="@+id/txtSearchLabel"
        android:layout_marginTop="35dp"
        android:text="Enter ID" />

    <EditText
        android:id="@+id/edNameSearch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtSearchLabel"
        android:layout_marginStart="42dp"
        android:layout_marginTop="19dp"
        android:layout_toEndOf="@+id/txtNameSearch"
        android:ems="10"
        android:inputType="textPersonName" />

    <TextView
        android:id="@+id/txtMobileSearch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/edNameSearch"
        android:layout_below="@+id/edNameSearch"
        android:layout_marginTop="44dp"
        android:text="" />

    <TextView
        android:id="@+id/txtEmailSearch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/txtMobileSearch"
        android:layout_below="@+id/txtMobileSearch"
        android:layout_marginTop="46dp"
        android:text="" />

    <Button
        android:id="@+id/btnFindSearch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/txtEmailSearch"
        android:layout_below="@+id/txtEmailSearch"
        android:layout_marginTop="51dp"
        android:text="Find" />
</RelativeLayout>
